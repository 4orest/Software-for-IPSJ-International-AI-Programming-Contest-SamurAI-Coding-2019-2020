// povray -W640 -H640 -KFI0 -KFF15 samurai-poses.pov

#include "textures.pov"
#include "dog.pov"
#include "camera-and-light.pov"

camera {
  orthographic
  location <0, 1, -2>
  look_at  <0, 0, 0>
  right 4*x
  up 4*y
}

#macro samuraiFigure(clr, xx, zz)
  #declare teamColor = rgb clr;
  object {
    dog(1)
    rotate frame_number*45*y
    scale 0.5
    translate <2*xx, 0, -2*zz>
    rotate 45 * y
    translate -0.9*y
  }
#end
  
#declare blueTeam = <0.2, 0.3, 0.9>;
#declare redTeam = <0.9, 0.3, 0.2>;

#switch (frame_number)
  #range (0, 7)
    #declare teamColor = redTeam;
  #break
  #range (8, 15)
    #declare teamColor = blueTeam;
  #end
#end

object {
  dogFigure(teamColor, 0, 0)
}
